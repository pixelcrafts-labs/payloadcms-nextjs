{
	"name": "payloadcms-nextjs",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"setup": "git init && husky install",
		"dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
		"devturbo": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo",
		"devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
		"build": "cross-env NODE_OPTIONS=--no-deprecation next build",
		"start": "cross-env NODE_OPTIONS=--no-deprecation next start",
		"lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
		"format": "prettier src/**/*.{ts,tsx} --write",
		"ci": "payload migrate && pnpm build",
		"payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
		"payload:types": "payload generate:types",
		"payload:schema": "payload-graphql generate:schema",
		"commitlint": "commitlint --edit",
		"commitizen": "exec < /dev/tty && git cz --hook || true"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.9.0",
		"@payloadcms/db-mongodb": "beta",
		"@payloadcms/email-nodemailer": "beta",
		"@payloadcms/next": "beta",
		"@payloadcms/plugin-cloud": "beta",
		"@payloadcms/richtext-lexical": "beta",
		"@payloadcms/ui": "3.0.0-beta.29",
		"@radix-ui/react-slot": "^1.1.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"graphql": "^16.9.0",
		"lucide-react": "^0.397.0",
		"next": "15.0.0-rc.0",
		"next-themes": "^0.3.0",
		"nodemailer": "^6.9.14",
		"payload": "beta",
		"react": "19.0.0-rc-fb9a90fa48-20240614",
		"react-dom": "19.0.0-rc-fb9a90fa48-20240614",
		"react-hook-form": "^7.52.1",
		"sharp": "0.32.6",
		"tailwind-merge": "^2.4.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.23.8",
		"zustand": "^4.5.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/node": "^20.14.10",
		"@types/nodemailer": "^6.4.15",
		"@types/react": "npm:types-react@19.0.0-beta.2",
		"@types/react-dom": "npm:types-react-dom@19.0.0-beta.2",
		"autoprefixer": "^10.4.19",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-next": "15.0.0-rc.0",
		"eslint-plugin-react-compiler": "0.0.0-experimental-0998c1e-20240625",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"postcss": "^8.4.39",
		"prettier": "^3.3.2",
		"tailwindcss": "^3.4.4",
		"typescript": "5.5.2"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "npm:types-react@19.0.0-beta.2",
			"@types/react-dom": "npm:types-react-dom@19.0.0-beta.2"
		}
	},
	"overrides": {
		"@types/react": "npm:types-react@19.0.0-beta.2",
		"@types/react-dom": "npm:types-react-dom@19.0.0-beta.2"
	}
}
